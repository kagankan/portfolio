---
export type Props = {
  /** 0~100 */
  value: number;
};
const { value } = Astro.props;
---

<div class="Bar" style={{ "--value": `${value}%` }}>{value}%</div>

<style lang="scss">
  .Bar {
    position: relative;
    z-index: 0;
    display: block;
    padding: 2px 4px;
    margin-top: 0.625em;
    font-size: 1.2rem;
    color: #fff;
    text-align: right;
    background-color: #999;
    border-radius: 9999px;

    // バー
    &::before {
      position: absolute;
      inset: 2px;
      z-index: -1;
      display: block;
      clip-path: inset(0 calc(100% - var(--value)) 0 0 round 9999px);
      content: "";
      background-image: linear-gradient(to right, red, blue);
      // box-shadow: inset 0px 2px 0px 0px rgba(255, 255, 255, 0.3), inset 0px -1px 0px 0px rgba(0, 0, 0, 0.3);
    }
  }
</style>
